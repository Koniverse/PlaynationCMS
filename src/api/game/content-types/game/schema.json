{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "maxEnergy": {
      "type": "integer"
    },
    "maxPoint": {
      "type": "integer"
    },
    "rank_definition": {
      "type": "component",
      "repeatable": false,
      "component": "game.rank-definition"
    },
    "energyPerGame": {
      "type": "integer"
    },
    "maxPointPerGame": {
      "type": "integer"
    },
    "active": {
      "type": "boolean"
    },
    "startTime": {
      "type": "datetime"
    },
    "endTime": {
      "type": "datetime"
    },
    "pointConversionRate": {
      "type": "float"
    },
    "gameType": {
      "type": "enumeration",
      "enum": [
        "casual",
        "farming"
      ]
    },
    "leaderboard_groups": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::leaderboard-group.leaderboard-group"
    }
  }
}
