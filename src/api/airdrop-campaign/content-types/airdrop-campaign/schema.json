{
  "kind": "collectionType",
  "collectionName": "airdrop_campaigns",
  "info": {
    "singularName": "airdrop-campaign",
    "pluralName": "airdrop-campaigns",
    "displayName": "Airdrop Campaign",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "start_snapshot": {
      "type": "datetime"
    },
    "end_snapshot": {
      "type": "datetime"
    },
    "start_claim": {
      "type": "datetime"
    },
    "end_claim": {
      "type": "datetime"
    },
    "network": {
      "type": "string",
      "default": "KAR"
    },
    "total_tokens": {
      "type": "integer"
    },
    "decimal": {
      "type": "integer"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "INACTIVE",
        "CANCELED"
      ],
      "default": "ACTIVE",
      "required": true
    },
    "raffle_count": {
      "type": "integer"
    },
    "start": {
      "type": "date"
    },
    "end": {
      "type": "date"
    },
    "symbol": {
      "type": "string",
      "default": "KAR"
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "RAFFLE"
      ],
      "default": "RAFFLE"
    },
    "tokenDistributions": {
      "type": "json",
      "required": true
    },
    "npsDistributions": {
      "type": "json",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "shortDescription": {
      "type": "text"
    },
    "token_slug": {
      "type": "string",
      "default": "karura_evm-NATIVE-KAR"
    },
    "share": {
      "type": "component",
      "repeatable": false,
      "component": "airdrop-campaign.share"
    },
    "conditionDescription": {
      "type": "text"
    },
    "leaderboard_groups": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::leaderboard-group.leaderboard-group"
    }
  }
}
