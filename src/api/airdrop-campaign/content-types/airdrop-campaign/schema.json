    "name": {
      "type": "string"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "start_snapshot": {
      "type": "datetime"
    },
    "end_snapshot": {
      "type": "datetime"
    },
    "start_claim": {
      "type": "datetime"
    },
    "end_claim": {
      "type": "datetime"
    },
    "eligibility_date": {
      "type": "datetime"
    },
    "network": {
      "type": "string",
      "default": "KAR"
    },
    "total_tokens": {
      "type": "integer"
    },
    "decimal": {
      "type": "integer"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "INACTIVE",
        "CANCELED"
      ],
      "default": "ACTIVE",
      "required": true
    },
    "raffle_count": {
      "type": "integer"
    },
    "start": {
      "type": "date"
    },
    "end": {
      "type": "date"
    },
    "symbol": {
      "type": "string",
      "default": "KAR"
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "RAFFLE"
      ],
      "default": "RAFFLE"
    },
    "eligibility_criteria": {
      "type": "json",
      "default": {
        "HOLD_TOKEN": 1,
        "TOTAL_NFT": 1,
        "TIME_PLAY_GAME": 1,
        "NUMBER_OF_NPS": 1,
        "DURATION": "2024-05-01",
        "GAME_PLAY_COUNT": 1,
        "POINTS_IN_GAME": 1
      },
      "required": true
    }
  }
}
